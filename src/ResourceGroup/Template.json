            {
              "name": "StravaAppHostName",
              "value": "[concat('https://', variables('stravaFunctionAppName'), '.azurewebsites.net')]"
            },
            {
              "name": "KeyVaultName",
              "value": "[variables('keyVaultName')]"
            }
          ]
        }
      }
